@model IEnumerable<MyLastBreath.Models.Cursousuario>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Curso del Usuario:</h1>
<h2><a asp-action="Inscribir" asp-controller="Cursos">Inscribirse en mas cursos</a></h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdcursoxNavigation.Idcurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdusuarioxNavigation.Iduser)
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdcursoxNavigation.Idcurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdusuarioxNavigation.Iduser)
            </td>
            <td>
                <a asp-controller="MyCalendar" asp-action="CalendarioDelCurso" asp-route-id="@item.IdcursoxNavigation.Idcurso">Ver Calendario</a>
            </td>
        </tr>
}
    </tbody>
</table>