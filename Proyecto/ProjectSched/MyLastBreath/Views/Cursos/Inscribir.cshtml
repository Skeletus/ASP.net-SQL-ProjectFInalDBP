@model MyLastBreath.Models.Cursousuario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Inscribirse en un curso</h1>

<h4>Seleccionar los datos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Inscribir">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Idusuariox" class="control-label"></label>
                <select asp-for="Idusuariox" class ="form-control" asp-items="ViewBag.Idusuariox"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idcursox" class="control-label"></label>
                <select asp-for="Idcursox" class ="form-control" asp-items="ViewBag.Idcursox"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Inscribir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListadoCursos">Regresar al listado de cursos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}